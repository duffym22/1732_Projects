<Window x:Class="_1732_Attendance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1732_Attendance"
        mc:Ignorable="d"
        Title="Team 1732 Attendance Station" Height="480" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded" Cursor="IBeam" Width="800">
    <Window.Resources>
        <Color x:Key="Accent_2">#FF8BC81E</Color>
    </Window.Resources>
    <Grid Background="White" Margin="0,0,4,0">
        <TextBox x:Name="txt_ID_Scan" HorizontalAlignment="Left" Margin="304,351,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" Cursor="AppStarting" KeyDown="txt_ID_Scan_KeyDown" Height="30" FontSize="18"/>
        <TextBlock x:Name="lbl_scanID" Margin="279,320,0,0" TextWrapping="Wrap" Text="Scan your student ID" FontFamily="Avenir" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left" Width="238" Height="26" FontSize="18"/>
        <Image x:Name="image" Margin="212,10,0,0" Source="1080pRammmmo.png" Cursor="None" HorizontalAlignment="Left" VerticalAlignment="Top" Height="210"/>
        <Image x:Name="image2" Margin="212,225,192,0" VerticalAlignment="Top" Source="words_BLUE.png" RenderTransformOrigin="0.414,0.489" Height="30"/>
        <Image x:Name="image1" Margin="145,260,130,0" VerticalAlignment="Top" Source="Logo Vector.png" Height="50" Width="515"/>
        <Button x:Name="btn_Reconnect" Content="Reconnect" Margin="266,320,266,71" Click="btn_Reconnect_Click" FontSize="18" IsEnabled="False" Foreground="Black"/>
        <Button x:Name="btn_Login" Content="Login" Click="btn_Login_Click" FontSize="18" Margin="696,402,10,10"/>
        <TextBox x:Name="txt_Status" HorizontalAlignment="Left" Height="23" Margin="145,391,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="531" BorderThickness="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold"/>

    </Grid>
</Window>

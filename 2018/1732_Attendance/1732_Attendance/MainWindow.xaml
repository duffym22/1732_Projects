<Window x:Class="_1732_Attendance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1732_Attendance"
        mc:Ignorable="d"
        Title="Team 1732 Attendance Station" Height="350" Width="525" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True" WindowStartupLocation="Manual" WindowState="Maximized" Loaded="Window_Loaded">
    <Window.Resources>
        <Color x:Key="Accent_2">#FF8BC81E</Color>
    </Window.Resources>
    <Grid Background="White">
        <Button x:Name="btn_Login" Content="Login" HorizontalAlignment="Left" Margin="469,288,0,0" VerticalAlignment="Top" Width="40" Click="btn_Login_Click" Height="23" FontSize="8"/>
        <TextBox x:Name="txt_ID_Scan" HorizontalAlignment="Center" Height="23" Margin="196,249,211,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Cursor="AppStarting" KeyDown="txt_ID_Scan_KeyDown"/>
        <TextBlock x:Name="txt_scanID" Margin="178,233,196,74" TextWrapping="Wrap" Text="Scan your student ID" FontFamily="Avenir" Width="145" TextAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
        <Image x:Name="image" Height="146" Margin="124,6,0,0" VerticalAlignment="Top" Source="1080pRammmmo.png" Cursor="None" HorizontalAlignment="Left" Width="276"/>
        <Image x:Name="image2" Margin="138,157,141,0" VerticalAlignment="Top" Source="words_BLUE.png" Height="25" HorizontalAlignment="Center"/>
        <Image x:Name="image1" Margin="92,190,83,0" VerticalAlignment="Top" Source="Logo Vector.png" Height="40"/>
        <RichTextBox x:Name="rtb_Output" HorizontalAlignment="Left" Height="28" Margin="10,283,0,0" VerticalAlignment="Top" Width="454" AcceptsReturn="False" AutoWordSelection="False" IsUndoEnabled="False" IsReadOnly="True" IsEnabled="False" Focusable="False">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>

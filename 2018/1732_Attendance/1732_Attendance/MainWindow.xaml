<Window x:Class="_1732_Attendance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1732_Attendance"
        mc:Ignorable="d"
        Title="Team 1732 Attendance Station" Height="350" Width="525" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True" WindowStartupLocation="Manual" WindowState="Maximized">
    <Window.Resources>
        <Color x:Key="Accent_2">#FF8BC81E</Color>
    </Window.Resources>
    <Grid Background="White">
        <Button x:Name="btn_Login" Content="Login" HorizontalAlignment="Left" Margin="434,291,0,0" VerticalAlignment="Top" Width="75" Click="btn_Login_Click"/>
        <TextBox x:Name="txt_ID_Scan" HorizontalAlignment="Center" Height="23" Margin="195,260,210,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" Cursor="AppStarting"/>
        <TextBlock x:Name="txt_scanID" Margin="178,241,196,0" TextWrapping="Wrap" Text="Scan your student ID" FontFamily="Avenir" Width="145" TextAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" KeyDown="txt_scanID_KeyDown"/>
        <Image x:Name="image" Height="146" Margin="124,10,0,0" VerticalAlignment="Top" Source="1080pRammmmo.png" Cursor="None" HorizontalAlignment="Left" Width="276"/>
        <Image x:Name="image2" Margin="114,161,117,0" VerticalAlignment="Top" Source="words_BLUE.png" Height="25" HorizontalAlignment="Center"/>
        <Image x:Name="image1" Margin="92,196,83,0" VerticalAlignment="Top" Source="Logo Vector.png" Height="40"/>

    </Grid>
</Window>
